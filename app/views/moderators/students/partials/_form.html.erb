      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
        <% student.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <div>
    <%= form.label :first_name, style: "display: block" %>
    <%= form.text_field :first_name %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :birthday, style: "display: block" %>
    <%= form.date_field :birthday %>
  </div>

  <div>
    <%= form.label :image, style: "display: block" %>
    <%= form.file_field :image %>
  </div>

  <div>
    <%= form.label :medias, style: "display: block" %>
    <%= form.file_field :medias, multiple: true %>
  </div>

  <div>
    <%= form.nested_fields_for :grades do |form| %>
      <%= render 'moderators/students/partials/grade_fields', form: form %>
    <% end %>
    <%= form.add_nested_fields_link :grades %>
  </div>

  <div>
    <%= form.submit %>
  </div>
