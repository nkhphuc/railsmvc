<div id="<%= dom_id teacher %>">
  <p>
    <strong>Name:</strong>
    <%= teacher.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= teacher.email %>
  </p>

  <p>
    <strong>School:</strong>
    <%= teacher.school.name %>
  </p>

  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#<%= "#{dom_id(teacher)}_modal" %>">
    Edit teacher
  </button>

  <%= button_to "Destroy this teacher", teacher, method: :delete, remote: true %>

  <!-- Modal -->
  <div class="modal fade" id="<%= "#{dom_id(teacher)}_modal" %>" tabindex="-1" aria-labelledby="<%= "#{dom_id(teacher)}_modal_label" %>" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="<%= "#{dom_id(teacher)}_modal_label" %>">Edit teacher info</h1>
          <button type="button" class="btn-close modalButton" data-bs-dismiss="modal" aria-label="Close" id="<%= "#{dom_id(teacher)}_modal_button" %>"></button>
        </div>
        <div class="modal-body">
          <%= render "form", teacher: teacher %>
        </div>
        <!-- <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button> -->
        </div>
      </div>
    </div>
  </div>

</div>
