<p style="color: green"><%= notice %></p>

<%= search_form_for @q, data: {remote: true} do |form| %>
  <%= form.collection_check_boxes :school_id_in, School.all, :id, :name %>
  <%= form.label 'Name' %>
  <%= form.search_field :name_cont %>
<% end %>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newTeacherModal">
  New teacher
</button>

<!-- Modal -->
<div class="modal fade" id="newTeacherModal" tabindex="-1" aria-labelledby="newTeacherModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="newTeacherModalLabel">New teacher info</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="<%= "#{dom_id(@teacher)}_modal_button" %>"></button>
      </div>
      <div class="modal-body">
        <%= render "form", teacher: @teacher %>
      </div>
      <!-- <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button> -->
      </div>
    </div>
  </div>
</div>

<h1>Teachers</h1>

<div id="teachers">
  <% @teachers.each do |teacher| %>
    <%= render "teachers/teacher", teacher: teacher %>
  <% end %>
</div>
